
@model Prj_Blog.CoreLayer.DTOs.Post.PostFilterDto
@{
    ViewData["Title"] = "دسته بندی ها";
    ViewData["selected"] = "category";
    var counter = 1;
}
<section class="content-header">
    <h1>
            @ViewData["Title"]; 
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Category" asp-action="index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<section class="content">
    <a class="btn btn-success "style="margin-bottom:5px;" asp-area="Admin" asp-controller="Post" asp-action="Add">افزودن مقاله </a>
    <div class="box box-primary">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>عنوان</th>
                        <th>slug</th>
                        <th>گروه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.posts)
                    {
                        <tr>
                            <td>@counter</td>
                            
                            <td>
                                <img src="/img/@item.ImageName" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Slug</td>
                            <td>@item.Category.Title</td>
                             <td>
                 <a s asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-info btn-sm">ویرایش</a>
                            </td>
                          @*   <td>
                                <a asp-area="Admin"  asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">ویرایش</a>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Add" asp-route-parentid="@item.Id" class="btn btn-success btn-sm">افزودن زیرگروه</a>
                            </td> *@

                        </tr>

                        counter += 1;
                    }
                   
                </tbody>
</table>

        </div>

    </div>

</section